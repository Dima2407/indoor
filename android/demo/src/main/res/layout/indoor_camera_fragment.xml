<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/outdoor_camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <khpi.com.demo.ui.opengl.IndoorCameraOverlay
        android:id="@+id/indoor_camera_map_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/indoor_camera_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="72dp"
        android:clickable="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/map_big_icn" />
    </FrameLayout>

    <khpi.com.demo.ui.view.IndoorRadarView
        android:id="@+id/radar"
        android:layout_width="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>